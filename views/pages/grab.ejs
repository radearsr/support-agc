<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <%- include("../partials/stylesheet"); %> <%- include("../partials/head");
    %>
  <link rel="stylesheet" href="/assets/extensions/choices.js/public/assets/styles/choices.css" />
  <title><%= title %></title>
</head>

<body>
  <div id="app">
    <div id="sidebar" class="active">
      <div class="sidebar-wrapper active">
        <div class="sidebar-header position-relative">
          <div class="d-flex justify-content-center align-items-center">
            <a class="logo" href="/">SUPPORT AGC</a>
            <div class="theme-toggle d-flex gap-2 align-items-center mt-2">
              <div class="form-check form-switch fs-6 d-none">
                <input class="form-check-input me-0" type="checkbox" id="toggle-dark" />
                <label class="form-check-label"></label>
              </div>
            </div>
            <div class="sidebar-toggler x">
              <a href="#" class="sidebar-hide d-xl-none d-block"><i class="bi bi-x bi-middle"></i></a>
            </div>
          </div>
        </div>
        <div class="sidebar-menu">
          <ul class="menu">
            <li class="sidebar-item <%= activePage === "Home" ? "active" : "" %>">
              <a href="/dashboard" class="sidebar-link">
                <i class="bi bi-house"></i>
                <span>Home</span>
              </a>
            </li>
            <li class="sidebar-item <%= activePage === "Grab" ? "active" : "" %>">
              <a href="/dashboard/manga" class="sidebar-link">
                <i class="bi bi-table"></i>
                <span>Grab Manga</span>
              </a>
            </li>
            <li class="sidebar-item <%= activePage === "Lists" ? "active" : "" %>">
              <a href="/dashboard/lists" class="sidebar-link">
                <i class="bi bi-list-stars"></i>
                <span>List Manga</span>
              </a>
            </li>
            <li class="sidebar-item <%= activePage === "Setting" ? "active" : "" %>">
              <a href="/dashboard/settings" class="sidebar-link">
                <i class="bi bi-sliders2"></i>
                <span>Auto Publish Setting</span>
              </a>
            </li>
            <li class="sidebar-item <%= activePage === "Account" ? "active" : "" %>">
              <a href="/dashboard/account" class="sidebar-link">
                <i class="bi bi-people"></i>
                <span>Account</span>
              </a>
            </li>
          </ul>
        </div>
      </div>
    </div>
    <div id="main" class="main-layout">
      <header class="mb-3">
        <nav class="navbar navbar-expand navbar-light navbar-top">
          <div class="container-fluid">
            <a href="#" class="burger-btn d-block">
              <i class="bi bi-justify fs-3"></i>
            </a>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
              <ul class="navbar-nav ms-auto mb-lg-0"></ul>
              <div class="dropdown">
                <a href="#" data-bs-toggle="dropdown" aria-expanded="false">
                  <div class="user-menu d-flex">
                    <div class="user-name text-end me-3 d-none d-md-block">
                      <h6 class="mb-0 text-gray-600"><%= fullName %></h6>
                      <p class="mb-0 text-sm text-gray-600"><%= roleName %></p>
                    </div>
                    <div class="user-img d-flex align-items-center">
                      <div class="avatar avatar-md">
                        <img src="/assets/images/mashiro.jpg" />
                      </div>
                    </div>
                  </div>
                </a>
                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="dropdownMenuButton" style="min-width: 11rem">
                  <li class="d-block d-md-none">
                    <h6 class="dropdown-header"><%= fullName %></h6>
                  </li>
                  <li>
                    <a class="dropdown-item" href="/logout"><i class="icon-mid bi bi-box-arrow-left me-2"></i>
                      Logout</a>
                  </li>
                </ul>
              </div>
            </div>
          </div>
        </nav>
      </header>
      <div class="main-content position-relative">
        <div class="toast position-absolute end-0 start-50 translate-middle fade hide" role="alert" aria-live="assertive" id="toastGrabManga" data-bs-delay="5000" aria-atomic="true">
          <div class="d-flex">
            <div class="toast-body fs-6"></div>
            <button type="button" class="btn-close me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
          </div>
        </div>
        <div class="page-title">
          <div class="row">
            <div class="col-12 col-md-6 order-md-1 order-last">
              <h3>Grab Manga</h3>
              <p class="text-subtitle text-muted">
                Halaman untuk grab manga series
              </p>
            </div>
            <div class="col-12 col-md-6 order-md-2 order-first">
              <nav aria-label="breadcrumb" class="breadcrumb-header float-start float-lg-end">
                <ol class="breadcrumb">
                  <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
                  <li class="breadcrumb-item active" aria-current="page"><%= activePage %></li>
                </ol>
              </nav>
            </div>
          </div>
        </div>
        <section>
          <div class="row match-height">
            <div class="col-12">
              <div class="card position-relative">
                <div class="card-content">
                  <div class="card-body">
                    <form class="form" id="form-finder">
                      <h4 class="card-title">Opsi Grabbing</h4>
                      <div class="row">
                        <div class="col-md-8 col-12">
                          <div class="form-group">
                            <label for="url-grabing">Link Sumber Grab</label>
                            <select id="url-grabing" name="linkTarget" class="form-select">
                              <option selected disabled>Pilih</option>
                              <option value="https://kiryuu.id">
                                https://kiryuu.id
                              </option>
                            </select>
                            <span class="d-none">*Source grabbing is required</span>
                          </div>
                        </div>
                        <div class="col-md-4 col-12">
                          <div class="form-group">
                            <label for="tipe-grabing">Tipe Grabbing</label>
                            <select id="tipe-grabing" class="form-select" name="type">
                              <option selected disabled>Pilih</option>
                              <option value="all">Semua</option>
                              <option value="unit">Satuan</option>
                            </select>
                          </div>
                        </div>
                      </div>
                      <h4 class="card-title title-more-option d-none">Opsi Lanjutan</h4>
                      <div class="row more-option all d-none">
                        <div class="col-md-5 col-12">
                          <div class="form-group">
                            <label for="first-char">Mengandung Karakter Awal</label>
                            <select id="first-char" class="form-select" name="firstChar" required>
                              <option>Pilih</option>
                              <option value="all">A - Z</option>
                              <% for(let i = 65; i <= 90; i++) { %>
                              <option value="<%= String.fromCharCode(i) %>"><%= String.fromCharCode(i) %></option>
                              <% } %>
                            </select>
                            <span class="d-none">*Contain first character is required</span>
                          </div>
                        </div>
                        <div class="col-md-5 col-12">
                          <div class="form-group">
                            <label for="displayed-data">Data yang akan tampil</label>
                            <select id="displayed-data" name="maxData" class="form-select" required>
                              <option selected>Pilih</option>
                              <option value="10">10</option>
                              <option value="20">20</option>
                              <option value="50">50</option>
                              <option value="100">100</option>
                              <option value="200">200</option>
                              <option value="500">500</option>
                            </select>
                            <span class="d-none">*Count data is required</span>
                          </div>
                        </div>
                        <div class="col-12 d-flex justify-content-center">
                          <button type="submit" name="button-all" class="btn btn-orange me-1 mb-1 find-grab">
                            Cari
                          </button>
                          <button type="reset" class="btn btn-light-secondary me-1 mb-1">
                            Reset
                          </button>
                        </div>
                      </div>
                      <div class="row more-option unit d-none">
                        <div class="col-md-4 col-12">
                          <div class="form-group">
                            <label for="status">Status</label>
                            <select id="status" class="form-select" name="status">
                              <option selected>Pilih</option>
                              <option value="all" selected>All</option>
                              <option value="ongoing">Ongoing</option>
                              <option value="completed">Completed</option>
                              <option value="hiatus">Hiatus</option>
                            </select>
                            <span class="d-none">*Status is required</span>
                          </div>
                        </div>
                        <div class="col-md-4 col-12">
                          <div class="form-group">
                            <label for="type-series">Type</label>
                            <select id="type-series" class="form-select" name="type">
                              <option value="all" selected>All</option>
                              <option value="manga">Manga</option>
                              <option value="manhwa">Manhwa</option>
                              <option value="manhua">Manhua</option>
                              <option value="comic">Comic</option>
                              <option value="novel">Novel</option>
                            </select>
                            <span class="d-none">*Type is required</span>
                          </div>
                        </div>
                        <div class="col-md-4 col-12">
                          <div class="form-group">
                            <label for="order-by">Order By</label>
                            <select id="order-by" class="form-select" name="orderBy">
                              <option value="default" selected>Default</option>
                              <option value="title">A-Z</option>
                              <option value="titlereverse">Z-A</option>
                              <option value="update">Update</option>
                              <option value="latest">Added</option>
                              <option value="popular">Populer</option>
                            </select>
                            <span class="d-none">*Order by is required</span>
                          </div>
                        </div>
                        <div class="col-12">
                          <div class="form-group">
                            <label for="genre-anime">Genres</label>
                            <span class="d-block">*Jika anda tidak memilih genre maka defaultnya adalah ALL genre</span>
                            <select class="choices form-select" id="genre-anime" multiple="multiple">
                              <% for(let i = 0; i < genres.length; i++) { %>
                              <option value="<%= genres[i].id_genre %>"><%= genres[i].name %></option>
                              <% } %>
                            </select>
                            <span class="d-none">*Genres is required</span>
                          </div>
                        </div>
                        <div class="col-12 d-flex justify-content-center">
                          <button type="submit" name="button-once" class="btn btn-orange me-1 mb-1 find-grab">
                            Cari!
                          </button>
                          <button type="reset" class="btn btn-light-secondary me-1 mb-1">
                            Reset
                          </button>
                        </div>
                      </div>
                    </form>
                  </div>
                </div>
                <div class="bg-loading position-absolute top-0 bottom-0 start-0 end-0 rounded d-none" id="loading-getter">
                  <div class="lds-ripple">
                    <div></div>
                    <div></div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </section>
        <section id="section-result" class="section d-none">
          <div class="card position-relative">
            <div class="card-body">
              <div class="d-flex justify-content-between">
                <h4 class="card-title">Hasil Penelusuran</h4>
                <button type="button" class="btn btn-orange" id="buttonInsertAll">Insert All Checked</button>
              </div>
              <table class="table table-striped" id="table1">
                <thead>
                  <tr>
                    <th>*</th>
                    <th>Judul</th>
                    <th>Link</th>
                    <th>Status</th>
                    <th>Action</th>
                  </tr>
                </thead>
                <tbody id="bodyTable"></tbody>
              </table>
            </div>
            <div class="bg-loading position-absolute top-0 bottom-0 start-0 end-0 rounded d-none" id="loading-insert-all">
              <div class="lds-ripple">
                <div></div>
                <div></div>
              </div>
            </div>
          </div>
        </section>
        <footer>
          <div class="footer clearfix mb-0 text-muted">
            <div class="float-start">
              <p>2023 &copy; SUPPORT AGC</p>
            </div>
          </div>
        </footer>
      </div>
    </div>
  </div>
  <script src="/assets/js/bootstrap.js"></script>
  <script src="/assets/js/app.js"></script>
  <script src="/assets/extensions/choices.js/public/assets/scripts/choices.js"></script>
  <script src="/assets/js/pages/form-element-select.js"></script>
  <script src="https://zuramai.github.io/mazer/demo/assets/js/pages/component-toasts.js"></script>
  <script type="module" src="/assets/js/pages/grabingPage.js"></script>
</body>

</html>