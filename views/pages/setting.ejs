<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <%- include("../partials/stylesheet"); %> <%- include("../partials/head");
    %>
    <title><%= title %></title>
  </head>

  <body>
    <div id="app">
      <div id="sidebar" class="active">
        <div class="sidebar-wrapper active">
          <div class="sidebar-header position-relative">
            <div class="d-flex justify-content-center align-items-center">
              <a class="logo" href="/">SUPPORT AGC</a>
              <div class="theme-toggle d-flex gap-2 align-items-center mt-2">
                <div class="form-check form-switch fs-6 d-none">
                  <input
                    class="form-check-input me-0"
                    type="checkbox"
                    id="toggle-dark"
                  />
                  <label class="form-check-label"></label>
                </div>
              </div>
              <div class="sidebar-toggler x">
                <a href="#" class="sidebar-hide d-xl-none d-block"
                  ><i class="bi bi-x bi-middle"></i
                ></a>
              </div>
            </div>
          </div>
          <div class="sidebar-menu">
            <ul class="menu">
              <li class="sidebar-item <%= activePage === "Home" ? "active" : "" %>">
                <a href="/dashboard" class="sidebar-link">
                  <i class="bi bi-house"></i>
                  <span>Home</span>
                </a>
              </li>
              <li class="sidebar-item <%= activePage === "Grab" ? "active" : "" %>">
                <a href="/dashboard/manga" class="sidebar-link">
                  <i class="bi bi-table"></i>
                  <span>Grab Manga</span>
                </a>
              </li>
              <li class="sidebar-item <%= activePage === "Lists" ? "active" : "" %>">
                <a href="/dashboard/lists" class="sidebar-link">
                  <i class="bi bi-list-stars"></i>
                  <span>List Manga</span>
                </a>
              </li>
              <li class="sidebar-item <%= activePage === "Setting" ? "active" : "" %>">
                <a href="/dashboard/settings" class="sidebar-link">
                  <i class="bi bi-sliders2"></i>
                  <span>Auto Publish Setting</span>
                </a>
              </li>
              <li class="sidebar-item <%= activePage === "Account" ? "active" : "" %>">
                <a href="/dashboard/account" class="sidebar-link">
                  <i class="bi bi-people"></i>
                  <span>Account</span>
                </a>
              </li>
            </ul>
          </div>
        </div>
      </div>
      <div id="main" class="main-layout">
        <header class="mb-3">
          <nav class="navbar navbar-expand navbar-light navbar-top">
            <div class="container-fluid">
              <a href="#" class="burger-btn d-block">
                <i class="bi bi-justify fs-3"></i>
              </a>
              <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav ms-auto mb-lg-0"></ul>
                <div class="dropdown">
                  <a href="#" data-bs-toggle="dropdown" aria-expanded="false">
                    <div class="user-menu d-flex">
                      <div class="user-name text-end me-3 d-none d-md-block">
                        <h6 class="mb-0 text-gray-600"><%= fullName %></h6>
                        <p class="mb-0 text-sm text-gray-600"><%= roleName %></p>
                      </div>
                      <div class="user-img d-flex align-items-center">
                        <div class="avatar avatar-md">
                          <img src="/assets/images/mashiro.jpg" />
                        </div>
                      </div>
                    </div>
                  </a>
                  <ul
                    class="dropdown-menu dropdown-menu-end"
                    aria-labelledby="dropdownMenuButton"
                    style="min-width: 11rem"
                  >
                    <li class="d-block d-md-none">
                      <h6 class="dropdown-header"><%= fullName %></h6>
                    </li>
                    <li>
                      <a class="dropdown-item" href="/login"
                        ><i class="icon-mid bi bi-box-arrow-left me-2"></i>
                        Logout</a
                      >
                    </li>
                  </ul>
                </div>
              </div>
            </div>
          </nav>
        </header>
        <div class="main-content">
          <div class="page-title">
            <div class="row">
              <div class="col-12 col-md-6 order-md-1 order-last">
                <h3>Auto Publish Setting</h3>
                <p class="text-subtitle text-muted">
                  Pengaturan untuk konfigurasi publish
                </p>
              </div>
              <div class="col-12 col-md-6 order-md-2 order-first">
                <nav aria-label="breadcrumb" class="breadcrumb-header float-start float-lg-end">
                  <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
                    <li class="breadcrumb-item active" aria-current="page"><%= activePage %></li>
                  </ol>
                </nav>
              </div>
            </div>
          </div>
          <section id="multiple-column-form">
            <div class="row match-height">
              <div class="col-12">
                <div class="card">
                  <div class="card-content">
                    <div class="card-body">
                      <form class="form">
                        <h4 class="card-title">Setting AGC</h4>
                        <div class="row">
                          <div class="col-md-6 col-12">
                            <div class="form-group">
                              <label for="url-agc">Link Halaman AGC</label>
                              <input
                                type="url"
                                id="url-agc"
                                class="form-control"
                                placeholder="https://supportagc.com"
                                name="urlDashboard"
                              />
                            </div>
                          </div>
                          <div class="col-md-6 col-12">
                            <div class="form-group">
                              <label for="email-agc">Email</label>
                              <input
                                type="email"
                                id="email-agc"
                                class="form-control"
                                placeholder="admin@supportagc.com"
                                name="emailDashboard"
                              />
                            </div>
                          </div>
                          <div class="col-md-6 col-12">
                            <div class="form-group">
                              <label for="password-agc">Password</label>
                              <input
                                type="password"
                                id="password-agc"
                                class="form-control"
                                name="passwordDashboard"
                                placeholder="iloveyou"
                              />
                            </div>
                          </div>
                        </div>
                        <h4 class="card-title">Setting Notifikasi</h4>
                        <div class="row">
                          <div class="col-md-6 col-12">
                            <div class="form-group">
                              <label for="first-name-column"
                                >ID Chat Telegram</label
                              >
                              <input
                                type="number"
                                class="form-control"
                                placeholder="12341234"
                                name="idTelegram"
                              />
                            </div>
                          </div>
                        </div>
                        <h4 class="card-title">Setting Schedule</h4>
                        <div class="row">
                          <div class="col-md-6 col-12">
                            <div class="form-group">
                              <label for="tipe-schedule">Tipe Schedule</label>
                              <select id="tipe-schedule" class="form-select">
                                <option selected>Off</option>
                                <option value="perhari">Tiap Hari</option>
                                <option value="perjam">Tiap Jam</option>
                                <option value="permenit">Tiap Menit</option>
                              </select>
                            </div>
                          </div>
                          <div class="col-md-6 col-12">
                            <div class="form-group">
                              <label for="action-count">Tiap Aksi Akan Publish Berapa Data</label>
                              <div class="input-group">
                                <input
                                  type="number"
                                  class="form-control"
                                  id="action-count"
                                  placeholder="1"
                                  name="actionCount"
                                />
                              </div>
                            </div>
                          </div>
                          <div class="col-md-6 col-12">
                            <div class="form-group action-value perhari d-none">
                              <label for="field-perhari">Aksi Tiap Pukul</label>
                              <div class="input-group">
                                <input
                                  type="time"
                                  class="form-control"
                                  id="field-perhari"
                                  placeholder="Username"
                                />
                                <div class="input-group-text">WIB</div>
                              </div>
                            </div>
                            <div class="form-group action-value perjam d-none">
                              <label for="field-perjam"
                                >Aksi Tiap Berapa Jam Sekali</label
                              >
                              <input
                                type="number"
                                id="field-perjam"
                                class="form-control"
                                placeholder="1"
                              />
                            </div>
                            <div class="form-group action-value permenit d-none">
                              <label for="field-permenit"
                                >Aksi Tiap Berapa Menit Sekali</label
                              >
                              <input
                                type="number"
                                class="form-control"
                                placeholder="10"
                                id="field-permenit"
                              />
                            </div>
                          </div>
                          <div class="col-12 d-flex justify-content-center">
                            <button
                              type="submit"
                              class="btn btn-primary me-1 mb-1"
                            >
                              Submit
                            </button>
                            <button
                              type="reset"
                              class="btn btn-light-secondary me-1 mb-1"
                            >
                              Reset
                            </button>
                          </div>
                        </div>
                      </form>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </section>
          <footer>
            <div class="footer clearfix mb-0 text-muted">
              <div class="float-start">
                <p>2023 &copy; SUPPORT AGC</p>
              </div>
            </div>
          </footer>
        </div>
      </div>
    </div>
    <script src="/assets/js/bootstrap.js"></script>
    <script src="/assets/js/app.js"></script>
    <script>
      const selectedTipeSchedule = document.querySelector("#tipe-schedule");
      const fieldsActionValue = document.querySelectorAll(".action-value");
      selectedTipeSchedule.addEventListener("change", (event) => {
        fieldsActionValue.forEach((field) => {
          if (field.classList.contains(event.target.value)) {
            field.lastElementChild.setAttribute("name", "testing");
            field.classList.remove("d-none");
          } else if (field.classList.contains("d-none")) {
            return;
          } else {
            field.classList.add("d-none");
          }
        });
      });
    </script>
  </body>
</html>
